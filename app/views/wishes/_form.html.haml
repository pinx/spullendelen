= form_for @wish do |f|
  - if @wish.errors.any?
    #error_explanation
      %h2= "#{pluralize(@wish.errors.count, "error")} prohibited this wish from being saved:"
      %ul
        - @wish.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :story
    = f.text_area :story
  .field
    = f.label :active_from
    = f.date_select :active_from
  .field
    = f.label :active_to
    = f.date_select :active_to, default: Date.today + 1.month
  .actions
    = f.submit 'Save'
